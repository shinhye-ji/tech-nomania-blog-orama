<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>


<div class="comments">
  <form id="commentForm" action="/api/{{id}}/comment" method="POST">
    <textarea name="description" placeholder="Add a comment..."></textarea>
    <button type="submit">Submit Comment</button>
  </form>

{{#each comment}}
  <h4>Comments:</h4>
  <p>{{username}} on {{format_date date_created}}</p>
  <p>{{comment_description}}</p>
{{/each}}
</div>

